    vector<int> bellman_ford(int V, vector<vector<int>>& edges, int S) {
     
        // Code here
        //negative cycle dag ,edges can be in any order
        //travel v-1 times the graph
        vector<int>dis(V,1e8);
        dis[S]=0;
        for(int i=0;i<V-1;i++)
        {
            for(int j=0;j<edges.size();j++)
            {
                int u=edges[j][0];
                int v=edges[j][1];
                int w=edges[j][2];
                if((dis[u]+w)<dis[v])
                {
                    dis[v]=dis[u]+w;
                }
            }
        }
        for(int j=0;j<edges.size();j++)
        {int u=edges[j][0];
                int v=edges[j][1];
                int w=edges[j][2];
            if(dis[u]+w<dis[v])
            {
                return {-1};
            }
        }
        return dis;
    }
